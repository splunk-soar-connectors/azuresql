                "format_vars": {
                    "description": "Comma separated list of variables",
                    "data_type": "string",
                    "required": false,
                    "primary": false,
                    "order": 1
                },
                "no_commit": {
                    "description": "Do not commit changes to the Database",
                    "data_type": "boolean",
                    "default": false,
                    "order": 2
                }
            },
